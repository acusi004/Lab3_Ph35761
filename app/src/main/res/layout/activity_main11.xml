<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity11">


    <TextView
        android:id="@+id/view1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#F90284"
        android:text="B4- head"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        />
    <TextView
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="B1 - HEAD"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="#FF9932"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintRight_toLeftOf="@+id/view4"/>
    <TextView
        android:id="@+id/view3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="B5"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="#F729"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        />

    <TextView
        android:id="@+id/view4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#Ff9382"
        android:text="B2"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintRight_toLeftOf="@+id/view5"
        />
    <TextView
        android:id="@+id/view5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#F73322"
        android:text="B3"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view4"
        />



</androidx.constraintlayout.widget.ConstraintLayout>